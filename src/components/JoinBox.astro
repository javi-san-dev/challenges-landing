---
import Image from "astro/components/Image.astro";
import downloadIcon from "../assets/download.svg";
---

<section
    class="aa py-50 text-white m-auto flex  items-center justify-center "
>
    <div
        class="max-w-[900px] px-10 max-[1050px]:w-full text-center flex items-center flex-col"
    >
        <div class="flex-2 mb-10">
            <h1 class="text-3xl max-[1050px]:text-3xl text-balance">
                Ready to start? <span class="text-neutral-400"
                    >Invest in quality preparation and start master the art of <span
                        class="title">algorithms</span
                    > today!</span
                >
            </h1>
        </div>

        <div class="flex-1 flex justify-center items-center gap-3 max-[400px]:flex-col max-[400px]:w-full">
            <button
                class="bg-white px-8 py-3 rounded-full font-medium cursor-pointer hover:bg-neutral-200 flex text-black w-full justify-center"
            >
                <Image
                    class="rounded-xl text-black mr-2"
                    src={downloadIcon}
                    alt="landing image"
                    width="22"
                    height="22"
                />Download</button
            >
            <button
                class="bg-black px-4 py-3 rounded-full cursor-pointer hover:bg-neutral-100 border border-neutral-800 w-full"
                >Try Web Demo</button
            >
        </div>
    </div>
</section>

