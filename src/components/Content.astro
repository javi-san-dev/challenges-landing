                    <Image class="rounded-lg" src={challenge1} alt="landing image" width="1790" height="1354" />
                </div>
                <div class="absolute w-[60%] translate-x-[-35%] translate-y-[0px] rotate-[-2deg] overflow-hidden rounded-lg border border-neutral-800 text-xs max-[1000px]:w-[35%] max-[700px]:w-[60%]">
                    <Image class="rounded-lg" src={challenge2} alt="landing image" width="1790" height="1354" />
                </div>
                <div class="w-[60%] translate-y-[10%] rotate-[-0deg] overflow-hidden rounded-lg border border-neutral-800 text-xs max-[1000px]:w-[35%] max-[700px]:w-[60%]">
                    <Image class="rounded-lg" src={challenge1} alt="landing image" width="1790" height="1354" />
                </div>
            </div>
