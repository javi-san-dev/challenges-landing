---
import '../styles/global.css'
import Menu from '../components/Menu.astro'
import Footer from '../components/Footer.astro'
import { fixedTitle } from '../consts/pageTitles'
import {URL} from "../consts/pageTitles"

const { title = fixedTitle } = Astro.props
---

<!doctype html>
<html lang="en" class="dark" id="htmlElement">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <meta name="description" content="Desktop platform for macOS, Windows and Linux to increase your algorithms skills" />
        <meta property="og:url" content={URL} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content="PlatforCode - Algorithms platform for macOS, Windows and Linux" />
        <meta property="og:description" content="Desktop platform for macOS, Windows and Linux to increase your algorithms skills" />
        <meta property="og:image" content={URL}/>
        <meta property="og:locale" content="en_EN" />
        <meta property="og:site_name" content="PlatforCode" />
    </head>
    <body>
        <Menu />
        <main>
            <div class="absolute h-screen w-screen bg-black"><div class="absolute top-0 right-0 bottom-0 left-0 bg-[linear-gradient(to_right,#6969692e_1px,transparent_1px),linear-gradient(to_bottom,#6969692e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div></div>
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style>
    html {
        font-family: system-ui, sans-serif;
        background: black;
    }
</style>
